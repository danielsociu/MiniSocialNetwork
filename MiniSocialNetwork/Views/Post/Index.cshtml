
@{

    ViewBag.Title = "Posts list";
}
@if (TempData.ContainsKey("message"))
{
    <h1>@ViewBag.message</h1>
}

<h2>@ViewBag.Title</h2>

@foreach (var post in ViewBag.Posts)
{
    <p>@post.Content</p>
    <a class="btn btn-success" href="/Posts/Show/@post.PostId">Show post</a>
    <a class="btn btn-success" href="/Posts/Edit/@post.PostId">Edit post</a>
    <a class="btn btn-success" href="/Comments/New/@post.PostId">Comment post</a>
    <br />
    <hr />
    <br />
}
<br />
<a class="btn btn-info" href="/Posts/New">Add Post</a>
<a class="btn btn-primary" href="/Comments/Index">Comments list</a>
<br />

