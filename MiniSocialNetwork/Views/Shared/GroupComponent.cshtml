
<div class="group-body">
    <div class="group-main">
        <h3>@Model.Name</h3>
    </div>
    <div class="group-info">
        <p>Created: @Model.CreatedAt.Date.ToString("yyyy-MM-dd")</p>
    </div>
    <div class="group-details">
        <h5>@Model.Details</h5>
    </div>
    <div class="group-buttons">
        @if (ViewBag.CurrentUserId != null && Model.CreatorId == ViewBag.CurrentUserId)
        {
            <a class="btn btn-sm btn-success" href="/Group/Edit/@Model.GroupId">Edit Group</a>
        }
        @if (!ViewBag.JoinedGroups.Contains(Model.GroupId))
        {
            <a class="btn btn-sm btn-success" href="/Group/Join/@Model.GroupId">Join Group</a>
        }

    </div>
</div>
